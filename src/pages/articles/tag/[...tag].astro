---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

import MainLayout from "../../../layouts/main.astro";
import Article from "../../../components/article.astro";
import { CapitalizeWords } from "../../../utils";

const { tag } = Astro.params;

const allBlogArticles: CollectionEntry<'blog'>[] = (await getCollection('blog')).sort((a:CollectionEntry<'blog'>, b:CollectionEntry<'blog'>) => {
  return new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime();
});

if(tag === undefined) throw new Error("Tag is undefined")

const tagArticles = allBlogArticles.filter(article => {
  return article.data.tags?.includes(tag);
});
---

<MainLayout title="The Blog">
  <a href={`/articles`} class="inline-block bg-gray-100 p-2 mb-6 hover:bg-indigo-500 hover:text-white">Back To Articles</a>
  <h1 class="text-3xl pb-3 font-bold">#{CapitalizeWords(tag)}</h1>

  <!-- Main Grid -->
  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
    {tagArticles.map(article => {
      return <Article article={article} />
    })}
    </div>

    <!-- Pagination -->
    <div class="flex justify-between mt-10">
      <a href="#" class="inline-block bg-indigo-100 px-3 py-2 hover:bg-indigo-600 hover:text-white rounded-lg">
        Previous
      </a>
      <a href="#"
        class="inline-block bg-indigo-100 px-3 py-2 hover:bg-indigo-600 hover:text-white rounded-lg">
        Next
      </a>
    </div>
</MainLayout>
