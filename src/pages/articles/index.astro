---
import MainLayout from "../../layouts/main.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import Pagination from "../../components/pagination.astro";

import { ARTICLES_PER_PAGE } from '../../constants'

import Article from "../../components/article.astro";

const allBlogArticles: CollectionEntry<'blog'>[] = (await getCollection('blog')).sort((a:CollectionEntry<'blog'>, b:CollectionEntry<'blog'>) => {
  return new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime();
});

const currentPage = +Astro.url.searchParams.get('page')! || 1;
const totalPages = Math.ceil(allBlogArticles.length / ARTICLES_PER_PAGE);

const articlesForPage = allBlogArticles.slice((currentPage - 1) * ARTICLES_PER_PAGE, currentPage * ARTICLES_PER_PAGE);
---

<MainLayout title="The Blog">
  <h1 class="text-2xl pb-3">All Articles</h1>

  <!-- Main Grid -->
  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
    {articlesForPage.map(article => {
      return <Article article={article} />
    })}
    </div>

    <Pagination currentPage={currentPage} totalPages={totalPages} disablePrevious={currentPage === 1} disableNext={currentPage === totalPages} />
</MainLayout>
