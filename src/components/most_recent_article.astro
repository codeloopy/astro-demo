---
import TagMostRecentArticle from './tags_most_recent_article.astro';
import { formatDate } from '../utils';

const { article } = Astro.props;
const {title, pubDate, tags, slug, image} = article.data
---

<div class="relative inline-block w-full sm:w-auto cursor-pointer rounded-2xl">
  <a href={`/blog/${slug}`}>
  <img src=`/images/${image}` alt="Most recent article image" class="w-full h-auto rounded-2xl" />

  <div class="absolute inset-0 flex flex-col items-center justify-center bg-black opacity-80 hover:opacity-75 transition duration-300 ease-in-out text-white text-center rounded-2xl">
    <div>
      <h2 class="text-2xl font-semibold sm:text-3xl">
          {title}
      </h2>
      <p class="text-xl mt-4">{formatDate(pubDate)}</p>

      <!-- Tags with rounded border -->
      <div class="flex mt-4 justify-center">
        {tags.map(tag => <TagMostRecentArticle tag={tag} />)}
      </div>
    </div>
  </div>
  </a>
</div>
