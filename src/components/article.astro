---
const {article} = Astro.props;
import Tag from './tag.astro';

import { formatDate } from '../utils';

const {title, pubDate, image, tags, slug} = article.data
---

<div class="max-w-md mx-auto mt-10">
  <div class="bg-white rounded-lg overflow-hidden shadow-lg">
    <a href={`/articles/${slug}`}>
      <img
        src=`/images/${image}`
        alt="Article Image"
        class="w-full h-48 object-cover hover:opacity-75 transition duration-300 ease-in-out"
      />
    </a>
    <div class="p-6">
      <h2 class="text-2xl font-semibold mb-2">
        <a href={`/articles/${slug}`}>{title}</a>
      </h2>
      <p class="text-gray-600 text-sm mb-4">{formatDate(pubDate)}</p>
      <div class="flex flex-wrap gap-2">
        {tags.map((tag:string, index:number) => {
          return <Tag tag={tag} index={index} />
        })}

      </div>
    </div>
  </div>
</div>
